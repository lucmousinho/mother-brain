{
  "name": "mother-brain",
  "version": "0.1.0",
  "description": "CLI + local API for agent run checkpoints, knowledge tree, recall, and policy gate",
  "type": "module",
  "bin": {
    "motherbrain": "./bin/run.js"
  },
  "oclif": {
    "bin": "motherbrain",
    "dirname": "motherbrain",
    "commands": {
      "strategy": "pattern",
      "target": "./dist/cli/commands",
      "globPatterns": [
        "**/*.js"
      ]
    },
    "flexibleTaxonomy": true,
    "topicSeparator": " "
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "lint": "eslint src/ tests/ --ext .ts",
    "lint:fix": "eslint src/ tests/ --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "dev": "tsx src/cli/main.ts",
    "start:api": "tsx src/api/server.ts"
  },
  "dependencies": {
    "@oclif/core": "^4.2.10",
    "better-sqlite3": "^11.8.1",
    "dotenv": "^16.4.7",
    "fastify": "^5.2.1",
    "gray-matter": "^4.0.3",
    "ulid": "^2.3.0",
    "yaml": "^2.7.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.12.0",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.0.1",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^3.0.5"
  },
  "engines": {
    "node": ">=20"
  },
  "license": "MIT",
  "pnpm": {
    "onlyBuiltDependencies": ["better-sqlite3", "esbuild"]
  }
}
